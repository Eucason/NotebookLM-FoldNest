{
  "manifest_version": 3,
  "name": "NotebookLM FoldNest",
  "version": "0.9.3",
  "description": "Tree-structured folder organization for NotebookLM notebooks and dashboard with Optimized Local Storage, Search, and optional Cloud Sync.",
  "author": "Eucason",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "unlimitedStorage",
    "identity"
  ],
  "host_permissions": [
    "https://notebooklm.google.com/*",
    "https://gist.githubusercontent.com/*",
    "https://www.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "YOUR_CLIENT_ID.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive.appdata"
    ]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://notebooklm.google.com/*"
      ],
      "js": [
        "lz-string_min.js",
        "content.js",
        "note-popout.js",
        "sync.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_start"
    }
  ]
}